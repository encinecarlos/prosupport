<%- include('partials/header') %>
<%- include('partials/navbar') %>
<div class="container">
    <div class="mt-3">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Create ticket support</h4>
            </div>
            <div class="card-body">
                <form action="/ticket/save" method="post">
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" placeholder="Title">
                    </div>
                    <div class="form-group">
                        <select name="priority" class="form-control">
                            <option value="0" class="text-uppercase">high</option>
                            <option value="1" class="text-uppercase">medium</option>
                            <option value="2" class="text-uppercase">low</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control" placeholder="Describe your problem" cols="30"
                                  rows="10"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Open Ticket</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>
