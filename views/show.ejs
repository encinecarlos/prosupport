<%- include('partials/header') %>
<%- include('partials/navbar') %>
<div class="container">
    <div class="mt-3">
        <div class="card">
            <div class="card-header">
                <h4><%= ticket.title %></h4>
            </div>
            <div class="card-body">
                <p>
                    <b>Code: </b>
                    <%= ticket.ticketNumber %>
                </p>
                <p>
                    <b>Status: </b>
                    <span class="badge badge-pill <%= ticket.ticketStatus == 1 ? 'badge-success' : 'badge-danger' %>">
                        <%= ticket.ticketStatus == 1 ? 'Open' : 'Closed' %>
                    </span></p>
                <p>
                    <b>Description: </b>
                    <%= ticket.description %>
                </p>
            </div>
            <div class="card-footer">
                <a href="#" class="btn btn-success">Answer Ticket</a>
                <a href="/ticket/changestatus/<%= ticket.id %>"
                   class="btn <%= ticket.ticketStatus == 1 ? 'btn-danger' : 'btn-success' %>">
                    <%= ticket.ticketStatus == 1 ? 'Close Ticket' : 'Open Ticket' %>
                </a>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>
